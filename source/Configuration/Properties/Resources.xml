<?xml version="1.0"?>
<Resources>
    <path>
        <protocol>https</protocol>
        <base>
            <environment>
                <production>
                    <url>pagseguro.uol.com.br</url>
                </production>
                <sandbox>
                    <url>sandbox.pagseguro.uol.com.br</url>
                </sandbox>
            </environment>
        </base>
        <static>
            <environment>
                <production>
                    <url>stc.pagseguro.uol.com.br</url>
                </production>
                <sandbox>
                    <url>stc.sandbox.pagseguro.uol.com.br</url>
                </sandbox>
            </environment>
        </static>
        <webservice>
            <environment>
                <production>
                    <url>ws.pagseguro.uol.com.br</url>
                </production>
                <sandbox>
                    <url>ws.sandbox.pagseguro.uol.com.br</url>
                </sandbox>
            </environment>
        </webservice>
    </path>
    <services>
        <payment>
            <request>v2/checkout</request>
            <response>v2/checkout/payment.html</response>
        </payment>
        <refund>
            <request>/v2/transactions/refunds</request>
        </refund>
        <cancel>
            <request>/v2/transactions/cancels</request>
        </cancel>
        <notification>
            <transaction>
                <request>/v3/transactions/notifications</request>;
            </transaction>
            <application>
                <request>v2/authorizations/notifications</request>
            </application>
            <pre-approval>
                <request>v2/pre-approvals/notifications</request>
            </pre-approval>
        </notification>
    </services>
</Resources>
